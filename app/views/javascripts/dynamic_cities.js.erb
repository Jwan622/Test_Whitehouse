var cities = new Array();
<% for city in @cities -%>
  cities.push(new Array(<%= city.state_id %>, '<%=h city.name %>', <%= city.id %>));
<% end -%>

function stateSelected() {
  state_id = $('#company_state').val();
  options = $('#company_state').options;
  debugger;
  options.length = 1;
  cities.each(function(city) {
    if (city[0] == state_id) {
      options[options.length] = new Option(city[1], city[2]);
    }
  });
  if (options.length == 1) {
    $('#company_city').hide();
  } else {
    $('#company_city').show();
  }
}

// document.observe

$(document).ready('dom:loaded', function() {
  $('#company_city').hide();
  $('#company_state').observe('change', stateSelected);
});

