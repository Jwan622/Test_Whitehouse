<div class="admin-heading">
  <h3>Welcome To The Admin Dashboard</h3>
</div>
<%= render 'uncontacted_cities' %>
<div class="company-statistics">
  <div class="company-data col-md-4">
    <h3>Company Data</h3>
    <div class="uncontacted-companies">
      Companies Not Yet Contacted: <%= Company.company_count_by_status("uncontacted") %>
    </div>
    <div class="contacted-companies">
      Contacted Companies: <%= Company.company_count_by_status("contacted") %>
    </div>
    <div class="confirmed-companies">
      Confirmed Companies: <%= Company.company_count_by_status("confirmed") %>
    </div>
    <div class="dead-companies">
      Companies No Longer Participating: <%= Company.company_count_by_status("dead") %>
    </div>
  </div>
  <div class="companies-by-city col-md-4">
    <h3>Top TechHire Cities</h3>
    <% Company.company_count_by_city.each do |city, count|%>
    <div class="top-cities">
      <%= city %> : <%= count %>
    </div>
    <% end %>
  </div>
</div>
